<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.westga.cs1302.bill.view.BillSystemAppController"
            prefWidth="400.0" prefHeight="300.0">

    <children>
        <TextField fx:id="itemNameField" layoutX="20" layoutY="20" promptText="Item name" />
        <TextField fx:id="itemAmountField" layoutX="20" layoutY="60" promptText="Item amount" />

        <Button fx:id="addItemButton" text="Add Item" layoutX="20" layoutY="100" />

        <TextArea fx:id="billDisplayArea" layoutX="20" layoutY="140" prefWidth="360" prefHeight="140" />
    </children>

</AnchorPane>
